<% if @comment.event %>
<h1>New Comment for <%= @comment.event.eventname%>!</h1>
<% else %>
<h1>New Comment!</h1>
<% end %>


<%= render "devise/shared/error_messages", resource: @comment %>

<%= form_for([@comment.event,@comment]) do |f|%>

 <% if !@comment.event %>
  <%= f.label :event %>
  <%= f.collection_select :event_id, Event.all, :id, :eventname %>
<% else %>
    <%= f.hidden_field :event_id %>
<% end %>

  <%= f.label :content %>
  <%= f.text_field :content %>


  <%= f.submit %>

<% end %>
